<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    android:fitsSystemWindows="false"
    android:background="#284777">

    <TextView
        android:id="@+id/alarm_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alarm"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="28sp"
        android:textColor="#e2e3d8"
        android:gravity="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <LinearLayout
        android:id="@+id/time_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/alarm_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:fontFamily="@font/clock_font"
            android:textColor="#d6e3ff"
            android:translationY="20dp"
            android:textSize="100sp"
            android:includeFontPadding="false"
            />

        <TextView
            android:id="@+id/alarm_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24"
            android:textSize="100sp"
            android:translationY="-20dp"
            android:fontFamily="@font/clock_font"
            android:lineSpacingExtra="0dp"
            android:includeFontPadding="false"
            android:textColor="#d6e3ff"

           />
    </LinearLayout>



    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
    <Button
        android:id="@+id/btn_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Dismiss"
        android:textColor="#0a305f"
        android:height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="12dp"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_snooze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_button_snooze"
        android:text="Snooze"
        android:textColor="#ffdad6"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="12dp"
        android:height="80dp"
        android:layout_marginBottom="20dp"
        android:textSize="30dp"
        android:textStyle="bold" />

</LinearLayout>
